@using Microsoft.AspNetCore.Identity
@using App.Models

@inject SignInManager<AppUser> signInManager
@inject UserManager<AppUser> userManager

@{
    
}
<ul class="navbar-nav">
    @if (signInManager.IsSignedIn(User)) {
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Manage" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Xin chào, @userManager.GetUserName(User)</button>
            </form>
        </li>
        <li class="nav-item">
            @* <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout">Đăng xuất</a> *@
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Đăng xuất</button>
            </form>
        </li>
    } else {
        <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        </li>
    }

</ul>